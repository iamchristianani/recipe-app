
<div class="container px-5 mt-0 width-50">
  
  <ul class="list-group">
    <li class="list-group-item list-group-item-secondary" aria-current="true"><h2>Public Recipes</h2></li>
    <% @recipes.each do |recipe| %>
      <li class="list-group-item shadow-sm justify-content-between align-items-center mb-3">
        <div class="d-flex justify-content-between">
          <div class="d-flex flex-column mb-3">
            <h4><%= link_to recipe.name, recipe_path(recipe), class: "text-decoration-none" %></h4>
            <p>By: <%= recipe.user.name %></p>
          </div>
          <div class="d-flex flex-column mb-3">
            <p>Total food items: <%= recipe.total_food_items %></p>
            <p>Total price: <%= number_to_currency(recipe.total_price) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>