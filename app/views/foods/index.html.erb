<div class="container px-5">
  <div class="d-flex justify-content-between align-items-center px-5 py-2" >
    <h3 class="pb-3">List of foods</h3>
    <%= link_to "Add Food", new_food_path, class: "btn btn-secondary btn-sm py-2", style: "height: 45px;" %>
  </div>
  <div class="container px-5">
    <table class="table table-sm align-middle table-striped table-hover table-bordered ">
      <thead>
        <tr class="table-active">
          <th scope="col">Food</th>
          <th scope="col">Measurement Unit</th>
          <th scope="col">Unit Price</th>
          <th scope="col"> Actions</th>
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <% @foods.each do |food| %>
          <tr scope="row">
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= number_to_currency(food.price) %></td>
            <td>
              <%= button_to "Delete", food_path(food), class: "btn btn-link", method: :delete, data: { confirm: "Are you sure you want to delete #{food.name}?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>