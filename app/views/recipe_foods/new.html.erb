<div class="container width-50">
  <h3 class="shadow-sm p-3 bg-body-tertiary rounded">Add Ingredient</h3>
  <%= form_with model: @recipe_food, url: recipe_recipe_foods_path do |form| %>

    <%= form.label :food_id, 'Food Name', class: "form-label" %>
    <%= form.select :food_id, @foods.map { |food| [food.name, food.id] }, {}, { class:'form-select'} %>
    <br>
    <%= form.label :quantity, 'Quantity', class: "form-label" %>
    <%= form.number_field :quantity, class:'form-control' %>
    <br>
    <%= form.submit "Add Ingredient", class: "btn btn-primary" %>
  <% end %>
</div>